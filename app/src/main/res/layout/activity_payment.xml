<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

  <androidx.cardview.widget.CardView
      android:id="@+id/CardViewBooking"
      android:layout_width="0dp"
      android:layout_height="265dp"
      android:layout_gravity="center"
      android:layout_marginStart="22dp"
      android:layout_marginTop="22dp"
      android:layout_marginEnd="22dp"
      app:cardCornerRadius="16dp"
      app:cardElevation="3dp"
      app:cardUseCompatPadding="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Payment"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/LinearFrom_Payment"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="1dp"
          android:layout_marginTop="60dp"
          android:layout_marginEnd="4dp"
          android:orientation="horizontal"
          android:weightSum="2"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/From_Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="From:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/datePickerFrom"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/linearTo_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="1dp"
          android:layout_marginTop="100dp"
          android:layout_marginEnd="4dp"
          android:orientation="horizontal"
          android:weightSum="2"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/To_Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="To:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/datePickerTo"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/linearPrice_date"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginStart="1dp"
          android:layout_marginTop="142dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:weightSum="2"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Price:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/PriceFill_Payment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/linearBalance_date"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginStart="1dp"
          android:layout_marginTop="185dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:weightSum="2"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Your Balance:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/BalanceFill_Payment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>
      </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>

  <Button
      android:id="@+id/saveButton_date"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:text="Make a booking"
      android:layout_marginTop="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.05"
      app:layout_constraintTop_toBottomOf="@+id/CardViewBooking" />
</androidx.constraintlayout.widget.ConstraintLayout>